.fr_img {
  width: 100%;
  height: 100%;
  position: relative;
}
.fr_img .fr_img_content {
  width: 100%;
  height: 100%;
  position: absolute;
}
.fr_img .loading_complete_transition {
  width: 100%;
  height: 100%;
  position: absolute;
  background-color: #FFFFFF;
  -webkit-animation: loading_complete_transition 1.2s forwards;
          animation: loading_complete_transition 1.2s forwards;
}
@-webkit-keyframes loading_complete_transition {
0% {
    opacity: 1;
}
100% {
    opacity: 0;
}
}
@keyframes loading_complete_transition {
0% {
    opacity: 1;
}
100% {
    opacity: 0;
}
}
.fr_img .loading_error {
  width: 100%;
  height: 100%;
  background-color: #F8F8F8;
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
}
.fr_img .loading_error .loading_error_img {
  width: 100rpx;
  height: 100rpx;
  max-width: 100%;
  max-height: 100%;
}
.fr_img .loading {
  width: 100%;
  height: 100%;
  background-color: #FFFFFF;
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
}
.fr_img .loading .loading_img {
  width: 100rpx;
  height: 100rpx;
  max-width: 100%;
  max-height: 100%;
}
.fr_img .loading .loading_oblique_light {
  width: 100%;
  height: 100%;
  background-color: #e3e3e3;
  background-image: linear-gradient(100deg, rgba(255, 255, 255, 0), rgba(255, 255, 255, 0.2) 50%, rgba(255, 255, 255, 0) 80%);
  background-size: 100rpx 100%;
  background-repeat: repeat-y;
  background-position: 0 0;
  -webkit-animation: loading_oblique_light .6s infinite;
          animation: loading_oblique_light .6s infinite;
}
@-webkit-keyframes loading_oblique_light {
to {
    background-position: 200% 0;
}
}
@keyframes loading_oblique_light {
to {
    background-position: 200% 0;
}
}
.fr_img .loading .loading_looming {
  width: 100%;
  height: 100%;
  -webkit-animation: loading_looming 1s infinite linear;
          animation: loading_looming 1s infinite linear;
  background-color: #e3e3e3;
}
@-webkit-keyframes loading_looming {
0% {
    background-color: rgba(227, 227, 227, 0.5);
}
50% {
    background-color: #e3e3e3;
}
100% {
    background-color: rgba(227, 227, 227, 0.5);
}
}
@keyframes loading_looming {
0% {
    background-color: rgba(227, 227, 227, 0.5);
}
50% {
    background-color: #e3e3e3;
}
100% {
    background-color: rgba(227, 227, 227, 0.5);
}
}

