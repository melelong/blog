.toplists {
  height: auto;
  min-height: 100vh;
  background-color: #fcfcfd;
}
.toplists .toplist {
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  width: 100vw;
  background-color: #fcfcfd;
  z-index: 2;
}
.toplists .content {
  width: 100vw;
}
.toplists .content .left .toplist {
  width: 92vw;
  margin: 4vw auto;
  position: relative;
  display: flex;
  z-index: 0;
}
.toplists .content .left .toplist .toplistimage1 {
  width: 244rpx;
  height: 244rpx;
  border-radius: 8px;
  overflow: hidden;
}
.toplists .content .left .toplist .toplistimage1 .toplistimage {
  width: 244rpx;
  height: 244rpx;
}
.toplists .content .left .toplist .UpdateTime {
  position: absolute;
  font-size: 24rpx;
  left: 10rpx;
  bottom: 10rpx;
  color: #FFFFFF;
}
.toplists .content .left .toplist .toplistText {
  height: 244rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size: 32rpx;
}
.toplists .content .left .toplist .toplistText view {
  margin-left: 4vw;
  width: 50vw;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}
.toplists .content .right {
  display: flex;
  flex-wrap: wrap;
  margin: 0 0 4vw;
}
.toplists .content .right .toplist {
  position: relative;
  display: flex;
  flex-wrap: wrap;
  margin: 0 0 4vw;
  z-index: 0;
}
.toplists .content .right .toplist .box {
  margin: 4vw 0 0 4vw;
  position: relative;
  height: 44vw;
}
.toplists .content .right .toplist .box .toplistimage1 {
  width: 44vw;
  height: 44vw;
  border-radius: 8px;
  overflow: hidden;
}
.toplists .content .right .toplist .box .toplistimage1 .toplistimage {
  width: 44vw;
  height: 44vw;
}
.toplists .content .right .toplist .box .UpdateTime {
  position: absolute;
  display: block;
  font-size: 30rpx;
  left: 20rpx;
  bottom: 20rpx;
  color: #FFFFFF;
}

