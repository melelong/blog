  padding-top: 1vh;
}
.search .searchHistorylist .searchHistorytop .searchHistoryTitle {
  width: 40vw;
  height: 4vh;
  padding-left: 10px;
  line-height: 4vh;
  display: inline-block;
  font-size: 24rpx;
}
.search .searchHistorylist .searchHistorytop .alldel {
  width: 10vw;
  height: 4vh;
