.search {
  height: auto;
  min-height: 100vh;
  background-color: #fcfcfd;
}
.search .search_bar {
  width: 100vw;
  height: 50px;
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fcfcfd;
  z-index: 1;
}
.search .search_bar .left {
  border-top-left-radius: 50%;
  border-bottom-left-radius: 50%;
  background-color: #ebecec;
  width: 30px;
  height: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.search .search_bar .left image {
  width: 12px;
  height: 12px;
}
.search .search_bar .search_bar_input {
  font-size: 14px;
  background-color: #ebecec;
  width: 80vw;
  height: 30px;
}
.search .search_bar .search_bar_input .search_bar_input_placeholder {
  color: #cbccd2;
}
.search .search_bar .right {
  border-top-right-radius: 50%;
  border-bottom-right-radius: 50%;
  background-color: #ebecec;
  width: 30px;
  height: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.search .search_bar .right image {
  width: 12px;
  height: 12px;
}
.search .search_bar1 {
  width: 100vw;
  background-color: #fcfcfd;
  height: 50px;
  z-index: 1;
}
.search .searchHotlist {
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  padding-top: 1vh;
  color: #333;
}
.search .searchHotlist .searchHotTitle {
  padding-left: 10px;
  font-size: 24rpx;
  height: 4vh;
  line-height: 4vh;
}
.search .searchHotlist .searchHotContent .searchHot {
  font-size: 26rpx;
  text-align: center;
  width: auto;
  font-weight: 400;
  display: inline-block;
  margin: 3px 6px;
  padding: 5px 12px;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 30px;
}
.search .searchHistorylist {
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  color: #333;
}
.search .searchHistorylist .searchHistorytop {
  display: flex;
