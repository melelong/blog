  display: flex;
  flex-direction: row-reverse;
  align-items: center;
  padding-right: 20px;
}
.search .searchHistorylist .searchHistorytop .alldel image {
  width: 34rpx;
  height: 34rpx;
}
.search .searchHistorylist .searchHistoryContent {
  margin-bottom: 4px;
}
.search .searchHistorylist .searchHistoryContent .searchHistory {
  font-size: 26rpx;
  text-align: center;
